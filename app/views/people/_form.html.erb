<%= simple_form_for @person do |form| %>

  <%= form.input :first %>
  <%= form.input :last %>  
  <%= form.input :birth, min: 270.years.ago, max: Date.today, allow_blank: true  %>
  <%= form.input :death, min: 270.years.ago, max: Date.today, allow_blank: true  %>
  <%= form.input :nationality %>
  <%= form.input :birthplace %>
  <%= form.input :gender %>
  
  <%= form.association :publications %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
